{
    ".source.jc": {
        "enum definition": {
            "prefix": "enum",
            "body": [
                "enum ${1:Name} {",
                "\t${2:}",
                "}"
            ],
            "description": "An enum declaration"
        },
        "let statement": {
            "prefix": "let",
            "body": [
                "let ${1:name} = ${2:value};"
            ],
            "description": "let statement"
        },
        "let borrow": {
            "prefix": "let ref",
            "body": [
                "let ref ${1:name} = ${2:value};"
            ],
            "description": "let borrow"
        },
        "let match reference": {
            "prefix": "let &",
            "body": [
                "let &${1:name} = ${2:value};"
            ],
            "description": "let match reference"
        },
        "let destruct struct": {
            "prefix": "let {",
            "body": [
                "let ${1:struct} {${2:field}} = ${3:value};"
            ],
            "description": "let match struct"
        },
        "match expression": {
            "prefix": "match",
            "body": [
                "match ${1:value} {",
                "\t${2:pattern} => ${3:expression}",
                "}"
            ],
            "description": "match expression"
        }
    }
}
